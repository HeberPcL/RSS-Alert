{
  "name": "RSS Alert",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Notifies user of new posts in RSS feeds",
  "icons": {
    "128": "128.png",
    "48": "48.png",
    "16": "16.png"
  },
  "browser_action": {
    "default_icon":  "19.png", // optional
    "default_title": "RSS Alert",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  },
  "background":{
      "persistent": true,
      "page" : "background.html"
  } ,
  "content_security_policy": "script-src 'self' https://www.google.com https://ssl.google-analytics.com; object-src 'self'",
  "homepage_url": "https://github.com/adamzr/RSS-Alert",
  "permissions": [
    "notifications",
    "https://www.google.com/*",
    "https://ssl.google-analytics.com/*",
    "unlimitedStorage"
  ]
}