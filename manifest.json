{
  "name": "RSS Alert",
  "version": "0.1",
  "description": "Notifies user of new posts in RSS feeds",
  "icons": {
    "128": "128.png",
    "48": "48.png",
    "16": "16.png"
  },
  "browser_action": {
    "default_icon":  "19.png", // optional
    "default_title": "RSS Alert",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  },
  "background_page": "background.html",
  "permissions": [
    "notifications",
    "https://www.google.com/*",
    "https://ajax.googleapis.com/*",
    "unlimitedStorage"
  ]
}